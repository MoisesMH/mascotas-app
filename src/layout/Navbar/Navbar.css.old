/* For mobile */

.Navbar-main {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: Black;
    flex-direction: column;
    text-align: center;
    gap: 2rem;
    width: 100%;
    padding-block: 2rem;
}

.Navbar-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.Navbar-list li {
    display: inline-block;
    padding-inline: 0.5rem;
}

.Navbar-left a,
.Navbar-right a,
.Navbar-list li a {
    text-decoration: none;
    color: white;
}

/* For desktop */

@media (min-width: 768px) {
    .Navbar-main {
        flex-direction: row;
    }

    .Navbar-left,
    .Navbar-right {
        padding-inline: 2rem;
    }

    .Navbar-list {
        flex-direction: row;
    }
    
}